<nav id="main" class="greenBack">
    <ul>
        <li class="purlwiseLogo"><a href="/home">Purlwise</a></li>
        <li><a href="/home">Home</a></li>
        <li><a href="/generate">Generate</a></li>
        <li><a class='active' href="/profile">Saved Patterns</a></li>
        <li>
            <a href="/logout"><img class="profImg" src={{user.profilePicUrl}} alt="user profile image" /> {{user.username}}<i class="fas fa-sign-out-alt"></i></a>
        </li>
    </ul>
</nav>

<div class="site-wrap">
    <div class="yellowBack" >
        {{#if patterns}}
      <div class="project-item"> 
            {{#each patterns}}
                <div class="card card-properties">
                <img class="card-img-top imgForCard"  src={{this.dataValues.patternImage}} alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{this.dataValues.patternName}}</h5>
                        <p class="card-text">{{this.dataValues.patternAuthor}}</p>
                        <button id="patternLink" class="link" target="_blank"><a href={{this.dataValues.patternUrl}} target="_blank"><i class="fas fa-link"></i></a></button>
                        <button data-id={{this.dataValues.patternId}} id="patternUnsave" class="unsave-btn link"><i class="fas fa-trash"></i></button>
                    </div>
                </div>
            {{/each}}
        </div>
        {{else}}
            <div id="noPatterns"> 
                <h1>No Saved Patterns</h1>
                <p>Click <a id="noStyle" href="/generate">Generate</a> at the top.  Then use the form to search by pattern type, yarn weight, and clothing type. Then press submit to generate your patterns, which you can save by clicking the heart button.</p>
            </div>
        {{/if}}
    </div>
</div>
<script type="text/javascript" src="/js/profileFront.js"></script>
<script type="text/javascript" src="/js/nav.js"></script>
